<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info_pedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.foodxplorer.foodxplorer.MainActivity">

    <Spinner
        android:id="@+id/spinnerDireccionesConfirmarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/listViewConfPedido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinnerDireccionesConfirmarPedido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/botonPagar" />

    <Button
        android:id="@+id/botonPagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Pedido"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textLabelTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/listViewConfPedido"
        android:layout_toRightOf="@+id/botonPagar"
        android:text="Total:"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtLabelImporteTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listViewConfPedido"
        android:layout_toEndOf="@+id/textLabelTotal"
        android:layout_toRightOf="@+id/textLabelTotal"
        android:text="0"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="24sp" />


</RelativeLayout>
