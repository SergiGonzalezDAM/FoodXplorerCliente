<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagenPromocion"
        android:layout_width="158dp"
        android:layout_height="143dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/navheader" />

    <TextView
        android:id="@+id/textViewPrecioPromocion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNombrePromocion"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/imagenPromocion"
        android:text="Error Precio"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/textViewNombrePromocion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/imagenPromocion"
        android:text="Producto"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textViewDescripcionPromociones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/textViewNombrePromocion"
        android:layout_alignRight="@+id/textViewNombrePromocion"
        android:layout_below="@+id/textViewPrecioPromocion"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/imagenPromocion"
        android:layout_toRightOf="@+id/imagenPromocion"
        android:text="Descripcion" />

    <TextView
        android:id="@+id/txtViewCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewDescripcionPromociones"
        android:layout_toRightOf="@+id/textViewPrecioPromocion"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/precioTotalProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewDescripcionPromociones"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewNombrePromocion"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

</RelativeLayout>