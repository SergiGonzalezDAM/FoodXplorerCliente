<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info_pedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.foodxplorer.foodxplorer.MainActivity">

    <TextView
        android:text="Nombre Cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="39dp"
        android:id="@+id/textViewNombreCliente"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Importe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp"
        android:id="@+id/textViewImporte"
        android:layout_alignBaseline="@+id/textViewNombreCliente"
        android:layout_alignBottom="@+id/textViewNombreCliente"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/textViewDireccion"
        android:layout_below="@+id/textViewNombreCliente"
        android:layout_alignLeft="@+id/textViewNombreCliente"
        android:layout_alignStart="@+id/textViewNombreCliente" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewInfoPedido"
        android:layout_below="@+id/textViewDireccion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/textViewEstadoResumenPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado del Pedido"
        android:layout_above="@+id/listViewInfoPedido"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />
</RelativeLayout>
