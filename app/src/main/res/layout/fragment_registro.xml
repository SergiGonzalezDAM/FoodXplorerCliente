<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foodxplorer.foodxplorer.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textViewNumeroPedido"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/editTextNumeroPedido" />

    <TextView
        android:text="Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/textViewNumeroPedido"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textViewLoginPassword"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_below="@+id/editTextNumeroPedido"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logopizzaxplorer"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editTextNumeroPedido"
        android:layout_alignStart="@+id/editTextNumeroPedido" />

    <TextView
        android:text="Correo Electrónico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/editTextPasswordRegistro"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextPasswordRegistro"
        android:layout_below="@+id/textViewLoginPassword"
        android:layout_alignLeft="@+id/editTextNumeroPedido"
        android:layout_alignStart="@+id/editTextNumeroPedido" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextCorreoRegistro"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/editTextPasswordRegistro"
        android:layout_alignStart="@+id/editTextPasswordRegistro" />

    <Button
        android:text="Registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegistrarRegistro"
        android:layout_below="@+id/editTextCorreoRegistro"
        android:layout_alignLeft="@+id/textViewLoginPassword"
        android:layout_alignStart="@+id/textViewLoginPassword"
        android:layout_marginTop="37dp" />

</RelativeLayout>
